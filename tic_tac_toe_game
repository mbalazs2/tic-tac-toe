# tic-tac-toe game

# classical
# a simple program
# a python program

# using the tkinter module
# gui with the idea being that buttons are used for fields
# this is the basic version

# there are 3 modes to play: 2 modes against computer (user starting the game,
# computer starting the game) and user against user
# default mode is user starting against computer
# playing against computer can only be done in unbeatable mode

# there is no simulation involved, only descriptive representation of the
# possibilities which is possible due to the very limited number of them

# some lines may be too long
# button commands may be optimized-shortened
# functions may be optimized

from tkinter import *
import tkinter.font as font
from random import randint

root=Tk()
root.title('Tic_Tac_Toe')

# this variable counts the number of moves from the beginning of the game

count=0

# this variable tracks if the opponent of the user is computer or human

comphum='comp'

# this variable helps disable buttons used to set the mode of play when
# the game already started

button_count=0

# function for starting a new game
# resets the buttons, entry field and variables to their original state

def new():
    global count
    count=0

    global comphum
    comphum='comp'

    global button_count
    button_count=0

    e.delete(0,END)
    e.insert(0,'Your turn!')

    button1.config(text='',state='normal',font=myFont)
    button2.config(text='',state='normal',font=myFont)
    button3.config(text='',state='normal',font=myFont)
    button4.config(text='',state='normal',font=myFont)
    button5.config(text='',state='normal',font=myFont)
    button6.config(text='',state='normal',font=myFont)
    button7.config(text='',state='normal',font=myFont)
    button8.config(text='',state='normal',font=myFont)
    button9.config(text='',state='normal',font=myFont)
    
    button_computer_0.config(bg='orange',relief='raised',state='normal')
    button_computer_x.config(relief='sunken',state='normal',bg='grey85')
    button_human.config(relief='sunken',state='normal',bg='grey85')
    
# function regulating buttons used for mode of play
# and placing first 'x' on the board if mode is 'computer=x'

def comphumf(which):
    
    global comphum
    global count
    global button_count
    
    if which=='x':
        if button_count==0:
            comphum='comp'
            count+=1
            button_computer_x['relief']='raised'
            button_computer_x['bg']='orange'
            button_computer_0['state']='disabled'
            button_computer_0['bg']='grey85'
            button_human['relief']='sunken'
            button_human['bg']='grey85'
        
            startnum=randint(1,9)
        
            if startnum==1:
                button1.config(text=x_0()[1],state='disabled',disabledforeground='black')
            if startnum==2:
                button2.config(text=x_0()[1],state='disabled',disabledforeground='black')
            if startnum==3:
                button3.config(text=x_0()[1],state='disabled',disabledforeground='black')
            if startnum==4:
                button4.config(text=x_0()[1],state='disabled',disabledforeground='black')
            if startnum==5:
                button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
            if startnum==6:
                button6.config(text=x_0()[1],state='disabled',disabledforeground='black')
            if startnum==7:
                button7.config(text=x_0()[1],state='disabled',disabledforeground='black')
            if startnum==8:
                button8.config(text=x_0()[1],state='disabled',disabledforeground='black')
            if startnum==9:
                button9.config(text=x_0()[1],state='disabled',disabledforeground='black')
                
            button_count+=1

    if which==0:
        comphum='comp'
        button_computer_x['state']='disabled'
        button_computer_x['bg']='grey85'
        button_computer_0['relief']='raised'
        button_computer_0['bg']='orange'
        button_human['relief']='sunken'
        button_human['bg']='grey85'
        
    if which=='hum':
        comphum='hum'
        button_computer_x['state']='disabled'
        button_computer_0['state']='disabled'
        button_computer_x['bg']='grey85'
        button_computer_0['bg']='grey85'
        button_human['relief']='raised'
        button_human['bg']='orange'
        
# function returns x or o for each player

def x_0():
    global count
    if count%2==0:
        return 'x', 'o'
    else:
        return 'o', 'x'

# function called when a field button is clicked
# it does a lot of things - most of the action takes place here
# manages buttons, entry field, decides who the winner is
# or if it's a draw, crosses out the winner configuration.
# if mode is 'computer=0' or 'computer=x' plays against the user

def winner():
    global button_count
    button_count+=1
    global count
    count+=1

# user against user mode
# managing entry field
        
    if comphum=='hum':
        if count%2==1:
            e.delete(0,END)
            e.insert(0,'Player 2')
        if count%2==0:
            e.delete(0,END)
            e.insert(0,'Player 1')
            
# crossing out the winner configuration, disabling buttons
        
        if button1['text']==button2['text']==button3['text']!='':
            button1['font']=winFont
            button2['font']=winFont
            button3['font']=winFont
        if button4['text']==button5['text']==button6['text']!='':
            button4['font']=winFont
            button5['font']=winFont
            button6['font']=winFont
        if button7['text']==button8['text']==button9['text']!='':
            button7['font']=winFont
            button8['font']=winFont
            button9['font']=winFont
        if button1['text']==button4['text']==button7['text']!='':
            button1['font']=winFont
            button4['font']=winFont
            button7['font']=winFont
        if button2['text']==button5['text']==button8['text']!='':
            button2['font']=winFont
            button5['font']=winFont
            button8['font']=winFont
        if button3['text']==button6['text']==button9['text']!='':
            button3['font']=winFont
            button6['font']=winFont
            button9['font']=winFont
        if button1['text']==button5['text']==button9['text']!='':
            button1['font']=winFont
            button5['font']=winFont
            button9['font']=winFont
        if button3['text']==button5['text']==button7['text']!='':
            button3['font']=winFont
            button5['font']=winFont
            button7['font']=winFont
        if button1['text']==button2['text']==button3['text']!='' or\
           button4['text']==button5['text']==button6['text']!='' or\
           button7['text']==button8['text']==button9['text']!='' or\
           button1['text']==button4['text']==button7['text']!='' or\
           button2['text']==button5['text']==button8['text']!='' or\
           button3['text']==button6['text']==button9['text']!='' or\
           button1['text']==button5['text']==button9['text']!='' or\
           button3['text']==button5['text']==button7['text']!='':
            button1.config(state='disabled')
            button2.config(state='disabled')
            button3.config(state='disabled')
            button4.config(state='disabled')
            button5.config(state='disabled')
            button6.config(state='disabled')
            button7.config(state='disabled')
            button8.config(state='disabled')
            button9.config(state='disabled')
            
            button_human.config(state='disabled',disabledforeground='black')
            button_computer_x.config(state='disabled',disabledforeground='black')
            button_computer_0.config(state='disabled',disabledforeground='black')

# announcing the winner
            
            e.delete(0,END)
            return 'The winner is {}'.format('Player 1!' if count%2==1 else 'Player 2!')
        
# announcing draw

        if button1['text']!='' and button2['text']!='' and button3['text']!='' and button4['text']!='' and\
           button5['text']!='' and button6['text']!='' and button7['text']!='' and button8['text']!='' and\
           button9['text']!='':
            e.delete(0,END)
            e.insert(0,'Draw.')
            button_human.config(state='disabled',disabledforeground='black')
            button_computer_x.config(state='disabled',disabledforeground='black')
            button_computer_0.config(state='disabled',disabledforeground='black')
            
# user against computer mode

    if comphum=='comp' and \
        button1['font']!=winFont and \
        button1['font']!=winFont and \
        button2['font']!=winFont and \
        button3['font']!=winFont and \
        button4['font']!=winFont and \
        button5['font']!=winFont and \
        button6['font']!=winFont and \
        button7['font']!=winFont and \
        button8['font']!=winFont and \
        button1['font']!=winFont:
        
        count+=1
        
# crossing out the winner configuration
            
        if button1['text']==button2['text']==button3['text']!='':
            button1['font']=winFont
            button2['font']=winFont
            button3['font']=winFont
        if button4['text']==button5['text']==button6['text']!='':
            button4['font']=winFont
            button5['font']=winFont
            button6['font']=winFont
        if button7['text']==button8['text']==button9['text']!='':
            button7['font']=winFont
            button8['font']=winFont
            button9['font']=winFont
        if button1['text']==button4['text']==button7['text']!='':
            button1['font']=winFont
            button4['font']=winFont
            button7['font']=winFont
        if button2['text']==button5['text']==button8['text']!='':
            button2['font']=winFont
            button5['font']=winFont
            button8['font']=winFont
        if button3['text']==button6['text']==button9['text']!='':
            button3['font']=winFont
            button6['font']=winFont
            button9['font']=winFont
        if button1['text']==button5['text']==button9['text']!='':
            button1['font']=winFont
            button5['font']=winFont
            button9['font']=winFont
        if button3['text']==button5['text']==button7['text']!='':
            button3['font']=winFont
            button5['font']=winFont
            button7['font']=winFont


# disabling unused spots (buttons), clearing Entry field
         
        if button1['text']==button2['text']==button3['text']!=''or button4['text']==button5['text']==button6['text']!='' or\
           button7['text']==button8['text']==button9['text']!='' or button1['text']==button4['text']==button7['text']!='' or\
           button2['text']==button5['text']==button8['text']!='' or button3['text']==button6['text']==button9['text']!='' or\
           button1['text']==button5['text']==button9['text']!='' or button3['text']==button5['text']==button7['text']!='':
            button1.config(state='disabled')
            button2.config(state='disabled')
            button3.config(state='disabled')
            button4.config(state='disabled')
            button5.config(state='disabled')
            button6.config(state='disabled')
            button7.config(state='disabled')
            button8.config(state='disabled')
            button9.config(state='disabled')
            
            button_human.config(state='disabled',disabledforeground='black')
            button_computer_x.config(state='disabled',disabledforeground='black')
            button_computer_0.config(state='disabled',disabledforeground='black')
            
            e.delete(0,END)


# announcing the winner

            if button_computer_x['bg']=='orange':
                return 'The winner is {}'.format('You!' if count%2==1 else 'Me!')
            return 'The winner is {}'.format('You!' if count%2==0 else 'Me!')

# announcing draw
        
        if button1['text']!='' and button2['text']!='' and button3['text']!='' and button4['text']!='' and\
           button5['text']!='' and button6['text']!='' and button7['text']!='' and button8['text']!='' and\
           button9['text']!='':
            e.delete(0,END)
            e.insert(0,'Draw.')
            
            button_human.config(state='disabled',disabledforeground='black')
            button_computer_x.config(state='disabled',disabledforeground='black')
            button_computer_0.config(state='disabled',disabledforeground='black')
            
# strategies                           
            
# to win in one move
        
        if button1['text']==button2['text']==x_0()[1] and button3['text']=='':
            button3.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button1['text']==button3['text']==x_0()[1] and button2['text']=='':
            button2.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button2['text']==button3['text']==x_0()[1] and button1['text']=='':
            button1.config(text=x_0()[1],state='disabled',disabledforeground='black')
        
        elif button4['text']==button5['text']==x_0()[1] and button6['text']=='':
            button6.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button4['text']==button6['text']==x_0()[1] and button5['text']=='':
            button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button5['text']==button6['text']==x_0()[1] and button4['text']=='':
            button4.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button7['text']==button8['text']==x_0()[1] and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button7['text']==button9['text']==x_0()[1] and button8['text']=='':
            button8.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button8['text']==button9['text']==x_0()[1] and button7['text']=='':
            button7.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==button4['text']==x_0()[1] and button7['text']=='':
            button7.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button1['text']==button7['text']==x_0()[1] and button4['text']=='':
            button4.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button4['text']==button7['text']==x_0()[1] and button1['text']=='':
            button1.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button2['text']==button5['text']==x_0()[1] and button8['text']=='':
            button8.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button2['text']==button8['text']==x_0()[1] and button5['text']=='':
            button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button5['text']==button8['text']==x_0()[1] and button2['text']=='':
            button2.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button3['text']==button6['text']==x_0()[1] and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button3['text']==button9['text']==x_0()[1] and button6['text']=='':
            button6.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button6['text']==button9['text']==x_0()[1] and button3['text']=='':
            button3.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==button5['text']==x_0()[1] and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button1['text']==button9['text']==x_0()[1] and button5['text']=='':
            button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button5['text']==button9['text']==x_0()[1] and button1['text']=='':
            button1.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button3['text']==button5['text']==x_0()[1] and button7['text']=='':
            button7.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button3['text']==button7['text']==x_0()[1] and button5['text']=='':
            button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button5['text']==button7['text']==x_0()[1] and button3['text']=='':
            button3.config(text=x_0()[1],state='disabled',disabledforeground='black')

# to not let the opponent win in one move
        
        elif button1['text']==button2['text']==x_0()[0] and button3['text']=='':
            button3.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button1['text']==button3['text']==x_0()[0] and button2['text']=='':
            button2.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button2['text']==button3['text']==x_0()[0] and button1['text']=='':
            button1.config(text=x_0()[1],state='disabled',disabledforeground='black')
        
        elif button4['text']==button5['text']==x_0()[0] and button6['text']=='':
            button6.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button4['text']==button6['text']==x_0()[0] and button5['text']=='':
            button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button5['text']==button6['text']==x_0()[0] and button4['text']=='':
            button4.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button7['text']==button8['text']==x_0()[0] and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button7['text']==button9['text']==x_0()[0] and button8['text']=='':
            button8.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button8['text']==button9['text']==x_0()[0] and button7['text']=='':
            button7.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==button4['text']==x_0()[0] and button7['text']=='':
            button7.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button1['text']==button7['text']==x_0()[0] and button4['text']=='':
            button4.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button4['text']==button7['text']==x_0()[0] and button1['text']=='':
            button1.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button2['text']==button5['text']==x_0()[0] and button8['text']=='':
            button8.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button2['text']==button8['text']==x_0()[0] and button5['text']=='':
            button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button5['text']==button8['text']==x_0()[0] and button2['text']=='':
            button2.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button3['text']==button6['text']==x_0()[0] and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button3['text']==button9['text']==x_0()[0] and button6['text']=='':
            button6.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button6['text']==button9['text']==x_0()[0] and button3['text']=='':
            button3.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==button5['text']==x_0()[0] and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button1['text']==button9['text']==x_0()[0] and button5['text']=='':
            button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button5['text']==button9['text']==x_0()[0] and button1['text']=='':
            button1.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button3['text']==button5['text']==x_0()[0] and button7['text']=='':
            button7.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button3['text']==button7['text']==x_0()[0] and button5['text']=='':
            button5.config(text=x_0()[1],state='disabled',disabledforeground='black')
        elif button5['text']==button7['text']==x_0()[0] and button3['text']=='':
            button3.config(text=x_0()[1],state='disabled',disabledforeground='black')

# corners 3rd move strategy

        elif button1['text']==x_0()[1] and button2['text']==x_0()[0] and button3['text']==''and \
             button4['text']=='' and button5['text']==x_0()[1] and button6['text']=='' and \
             button7['text']=='' and button8['text']=='' and button9['text']==x_0()[0]:
            button7.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==x_0()[1] and button2['text']=='' and button3['text']=='' and \
             button4['text']==x_0()[0] and button5['text']==x_0()[1] and button6['text']=='' and \
             button7['text']=='' and button8['text']=='' and button9['text']==x_0()[0]:
            button3.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==x_0()[1] and button2['text']=='' and button3['text']==x_0()[0] and \
             button4['text']==x_0()[0] and button5['text']=='' and button6['text']=='' and \
             button7['text']==x_0()[1] and button8['text']=='' and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==x_0()[1] and button2['text']==x_0()[0] and button3['text']==x_0()[1] and \
             button4['text']=='' and button5['text']=='' and button6['text']=='' and \
             button7['text']==x_0()[0] and button8['text']=='' and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==x_0()[1] and button2['text']==x_0()[0] and button3['text']==x_0()[1] and \
             button4['text']=='' and button5['text']=='' and button6['text']=='' and \
             button7['text']=='' and button8['text']=='' and button9['text']==x_0()[0]:
            button7.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']==x_0()[1] and button2['text']=='' and button3['text']=='' and \
             button4['text']==x_0()[0] and button5['text']=='' and button6['text']=='' and \
             button7['text']==x_0()[1] and button8['text']=='' and button9['text']==x_0()[0]:
            button3.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']=='' and button2['text']==x_0()[0] and button3['text']==x_0()[1] and \
             button4['text']=='' and button5['text']==x_0()[1] and button6['text']=='' and \
             button7['text']==x_0()[0] and button8['text']=='' and button9['text']=='':
            button9.config(text=x_0()[1],state='disabled',disabledforeground='black')

        elif button1['text']=='' and button2['text']=='' and button3['text']==x_0()[1] and \
